

<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag url_for(@contest_application.contest.photo), width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @contest_application.id %> <small><span class="badge badge-primary"><%= @contest_application.status %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @contest_application.created_at.to_date %></li>
        <li><strong>Contest</strong> <%= @contest_application.contest.title %></li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @contest_application.amount %></li>
        </li>
      </ul>
     <!--  <p>Estimated delivery in <strong>2 business days</strong></p> -->
    </div>
  </div>
</div>
