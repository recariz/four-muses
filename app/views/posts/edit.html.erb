<div class="container mt-5">

  <h5 class= "ml-5">Create a post</h5>
  <div class="container mt-4">
    <div class= 'row'>
      <div class="col-6">

        <%= simple_form_for(@pool) do |f| %>

          <%= f.input :name %>
          <%= f.input :description%>
          <%= f.input :photos, as: :file, input_html: { multiple: true }%>
          <div class= "checkbox mt-3">
            <p>Categories:</p>
            <%= f.input :painting%>
            <%= f.input :sculpture%>
            <%= f.input :architecture%>
            <%= f.input :photography %>

          </div>
        <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
