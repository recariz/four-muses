<% @posts.each do |post| %>
  <div class="card-post">
    <div class="card-post-top-infos">
      <div class="user-avatar-nickname">
        <img class="avatar-small" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
        <a href="/users/<%=post.user.id %>"><p><%=post.user.nickname%></p></a>
      </div>
      <div class="post-reactions">
        <div class="reaction-type"><p class="mb-0"><%= post.comments.count %></p><i class="fal fa-comment"></i></div>
        <div class="reaction-type"><p><%= post.likes.count %> </p><i class="fal fa-heart"></i></div>
      </div>
    </div>
    <div class="post-content">
      <img class="post-image" src="https://images.squarespace-cdn.com/content/v1/54ef4d4ee4b002862ddb9057/1491229335309-UWAH4YMHQ4B7EAD4H6C6/ke17ZwdGBToddI8pDm48kE-iQx--1bZ3rNNmb-PgpwF7gQa3H78H3Y0txjaiv_0fDoOvxcdMmMKkDsyUqMSsMWxHk725yiiHCCLfrh8O1z5QHyNOqBUUEtDDsRWrJLTmG94TGNuzCcCPVStE9JyN8HZDuWyOUy1zY2XJJ2gPjFoKZzRsIC28YWt-Zp6CxD1v/IMG_2389.JPG" alt="">
      <div class="post-description">
        <div id="like-button"><i class="fal fa-heart"></i></div>
        <h5>Girl with foulard</h5>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed eiusmod tempor incidunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquid ex ea commodi consequat.</p>
      </div>
    </div>
    <div class="line-divider"></div>
    <div class="post-comments-container">
        <p><span style="font-weight: bolder">recariz  </span>Woow this is niiiiice!</p>
        <p id="display-comments">See more comments...</p>
        <form class="comment-form" action="">
          <input id="comment-input" type="text" placeholder="Add your comment">
          <input id="comment-submit" type="submit" value="Post">
        </form>

    </div>
  </div>
<% end %>
