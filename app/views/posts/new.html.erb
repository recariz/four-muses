<div class = "main-container">
<h3>Add a post</h3>
<br>
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <div class="tm-2">
    <%= f.input :title,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "title"} %>
    <%= f.input :description,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "description"} %>
 <!--    <#%= f.input :interests %>
    <#%= f.association :interest, as: :check_boxes %>
 -->

    <div class="send-to-orbit">
      <%= f.input :photos, as: :file, input_html: { multiple: true, class: "photo-input"} %>
      </div>
      <p>Photos</p>
      <div class="pink-button-sm-secondary photo-button">Upload</div>
      <div class="file-names">
      </div>
    </div>

  </div>
  <br>
    <div class="pink-button-lg center-button w-100"><%= f.button :submit, "Post" %></div>
<% end %>
</div>

