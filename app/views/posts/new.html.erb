<div class = "main-container">
<h3>Add a post</h3>
<br>
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <div class="tm-2">
    <%= f.input :title,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "title"} %>
    <%= f.input :description,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "description"} %>
    <%= f.association :post_tags, as: :check_boxes, collection: current_user.interests, label: false, item_wrapper_class: "tag js-checkbox", input_html: {class: "d-none"} %>

    <div class="send-to-orbit">
      <%= f.input :photos, as: :file, input_html: { multiple: true, class: "photo-input"} %>
      </div>
      <p>Photos</p>
      <div class="pink-button-sm-secondary photo-button">Upload</div>
      <div class="file-names">
      </div>
    </div>
  <br>


  <div style = "text-align: center" >
    <div class="pink-button-lg center-button"><%= f.button :submit, "Post" %></div>
  </div>
<% end %>
</div>


