<div class="main-container">
  <div class="dashboard-container">
     <h1> My dashboard</h1>
      <div class="card-dashboard">
        <h4> Your applications</h4>
        <div class = "row">
          <div class ="col">
            <h5> Contest</h5>
          </div>
          <div class="col">
            <h5>Artist</h5>
          </div>
          <div class="col">
            <h5>Status</h5>
          </div>
        </div>
        <% @my_applications_requests.each do |request| %>
        <div class="row">
          <div class="col">
            <%= request.contest.title %>
          </div>
          <div class="col">
            <%= request.user.name  %>
          </div>
          <div class="col">
            <% if request.status == "pending" %>
            <div class = 'd-flex justify-content-start-between'>
              <div ><%= link_to "Accept", request_status_change_path(request, status: "accepted"), method: :patch%></div>
              <br>
              <div class = "ml-1"><%= link_to "Reject", request_status_change_path(request, status: "rejected"), method: :patch%></div>
              </div>
            <% elsif request.status == "accepted" %>
              <p style = "color: #1b6ca8; font-weight: bold"><%= request.status.capitalize %> </p>
            <% else %>
              <p style = "color: #e7305b; font-weight: bold"><%= request.status.capitalize %> </p>
            <% end %>
        </div>
          <div class="col">
            <div class="d-flex">
              <div> <%#= link_to 'show', contest_path(contest), method: :show, class: "button-pink" %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
